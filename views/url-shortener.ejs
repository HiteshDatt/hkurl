<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="style.css" type="text/css"/>
  <title>HK urls</title>
</head>
<body>
<div class="wrapper" style="min-height: 100vh;">
  <div class="container">

  <header>
      <div class="logo"> <a href="/"><img src="logo.png" alt="logo"></a></div>
      <input type="checkbox" id="nav-check">
      <label for="nav-check">
      <nav><div></div><div></div><div></div></nav>
      </label>
      <div class="nav-links">
          <div><a href="/#home">Home</a></div> <div><a href="/#about">About us</a></div> <div><a href="/url-shortener">URL Shortener</a></div>
      </div>
  </header>

  <div class="url-short">
    <h1 class="heading">URL Shortener</h1>
    <form action="/shortUrls" method="POST">
      <input required placeholder="URL" type="url" name="fullUrl">
      <button type="submit">Shorten</button>
    </form>
    
    <table >
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="http://hkurl.ml/<%= shortUrl.short %>">hkurl.ml/<%= shortUrl.short %></a></td>
            <td id= "clicks"><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  </div>
  <footer><div>All rights reserved &copy; 2020 HK URLs</div>
  </footer>
</div>
</body>
</html>